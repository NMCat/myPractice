<!-- 添加两个按钮 -->
<div class="container" style="margin-top: 20px;">
  <a href="/add" class="btn btn-warning pull-right button">添加学生</a>
  <form action="/search" method="get" style="margin-top: 5px">
    <input type="text" name="keyword" placeholder="查询学生信息">
  </form>
</div>
<!-- 列表 -->
<div class="container table-responsive" style="margin-top: 20px;">
  <table class="table table-hover">
    <tr>
      <th class="text-center">姓名</th>
      <th class="text-center">年龄</th>
      <th class="text-center">性别</th>
      <th class="text-center">号码</th>
      <th class="text-center">邮箱</th>
      <th class="text-center">备注</th>
      <th class="text-center">编辑</th>
      <th class="text-center">删除</th>
    </tr>
      <% mess.forEach(function (mes) { %>
    <tr>
      <td class="text-center"><%= mes.name%></td>
      <td class="text-center"><%= mes.age%></td>
      <td class="text-center"><%= mes.gender=="true" ? "男" : "女"%></td>
      <td class="text-center"><%= mes.phone%></td>
      <td class="text-center"><%= mes.email%></td>
      <td class="text-center"><%= mes.detail%></td>
      <td class="text-center"><a href="/edit/<%=mes.name%>/<%=mes.age%>" class="btn btn-primary">编辑</a></td>
      <td class="text-center"><a href="/remove/<%=mes.name%>/<%=mes.age%>" class="btn btn-danger">删除</a></td>
    </tr>
      <% }) %>
  </table>
</div>
